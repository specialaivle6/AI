# Solar Panel AI Service - 환경변수 설정
# 프로덕션 배포 시 실제 값으로 변경하세요

# 서버 설정
HOST=0.0.0.0
PORT=8000
DEBUG=false
LOG_LEVEL=INFO

# AI 모델 설정
MODEL_PATH=/app/models/yolov8_seg_0812_v0.1.pt
DEVICE=cpu
CONFIDENCE_THRESHOLD=0.25

# S3 및 이미지 처리 설정
S3_DOWNLOAD_TIMEOUT=30
MAX_IMAGE_SIZE=20971520

# CORS 설정 (프로덕션에서는 특정 도메인으로 제한)
CORS_ORIGINS=*

# 백엔드 연동 설정
BACKEND_API_TIMEOUT=60

# 손상 분석 임계값 설정
CRITICAL_DAMAGE_THRESHOLD=5.0
CONTAMINATION_THRESHOLD=10.0
MAINTENANCE_URGENT_THRESHOLD=10.0
