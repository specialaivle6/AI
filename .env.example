# Solar Panel AI Service - 환경변수 설정
# 🚨 실제 배포 시 보안 강화 필수

# 서버 설정
HOST=0.0.0.0
PORT=8000
DEBUG=false
LOG_LEVEL=INFO

# AI 모델 설정 - Docker 경로에 맞춤
DAMAGE_MODEL_PATH=/app/models/yolov8_seg_0812_v0.1.pt
PERFORMANCE_MODEL_PATH=/app/models/voting_ensemble_model.pkl
DEVICE=cpu
CONFIDENCE_THRESHOLD=0.25

# S3 및 이미지 처리 설정
S3_DOWNLOAD_TIMEOUT=30
MAX_IMAGE_SIZE=20971520

# CORS 설정
CORS_ORIGINS=*

# 백엔드 연동 설정
BACKEND_API_TIMEOUT=60

# 손상 분석 임계값 설정
CRITICAL_DAMAGE_THRESHOLD=5.0
CONTAMINATION_THRESHOLD=10.0
MAINTENANCE_URGENT_THRESHOLD=10.0

# 🔥 보안 강화: AWS 설정
AWS_DEFAULT_REGION=ap-northeast-2  # 올바른 리전
# AWS_ACCESS_KEY_ID=  # EC2 IAM 역할 사용 권장
# AWS_SECRET_ACCESS_KEY=  # EC2 IAM 역할 사용 권장

# 🔥 보안 강화: OpenAI 설정
# OPENAI_API_KEY=  # 별도 시크릿 관리 권장

# ChromaDB 설정
CHROMA_DIR=/app/chatbot/db
CHROMA_COLLECTION=solar_qa
EMBEDDING_MODE=openai